@import 'variables'

@font-face
    font-family: 'Fira Sans';
    src: url($font-path+'fira/eot/FiraSans-Light.eot');
    src: local('Fira Sans Light'),
         url($font-path+'fira/eot/FiraSans-Light.eot') format('embedded-opentype'),
         url($font-path+'fira/woff/FiraSans-Light.woff') format('woff'),
         url($font-path+'fira/ttf/FiraSans-Light.ttf') format('truetype');
    font-weight: 300;
    font-style: normal;

