.container
  bottom 0
  border 1px solid black
  background pink
  height 100vh

.landing-menu
  height 100%
  display flex
  flex-flow column

.landing-menu-row
  flex 1 1 auto
  display flex
  flex-flow column
  justify-content space-around
  align-items stretch
  text-align center
  @media screen and (min-width: 600px)
    flex-flow: row;

.landing-menu-item
  flex 1 1 auto
  width 100%
  display flex
  justify-content space-around
  align-items center
  border .1em solid black
  @media screen and (min-width: 600px)
    background steelblue
